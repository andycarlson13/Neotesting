<p id="notice"><%= notice %></p>
<h1>
  Node
</h1>
<table>
  <thead>
    <tr>
      <th style="border: 1px solid black;">
        Id
      </th>
      <th style="border: 1px solid black;">
        Name
      </th>
      
        <th colspan='1' style="border: 1px solid black;">
          Led
        </th>
      
        <th colspan='1' style="border: 1px solid black;">
          Button
        </th>
      
        <th colspan='2' style="border: 1px solid black;">
          NeoPixelStickEight
        </th>
      
    </tr>
    <tr>
      <th>
        &nbsp;
      </th>
      <th>
        &nbsp;
      </th>
          <th>
            led_state
          </th>
          <th>
            safe
          </th>
          <th>
            led_index
          </th>
          <th>
            led_color
          </th>
    </tr>
  </thead>
  <tbody>
    <tr id='<%= @node.apiotics_instance %>'>
      <td>
        <%= @node.apiotics_instance %>
      </td>
      <td>
        <%= @node.name %>
      </td>
          <td class='node-led-led_state'>
            <%= @node.led.led_state %>
          </td>
          <td class='node-button-safe'>
            <%= @node.button.safe %>
          </td>
          <td class='node-neo_pixel_stick_eight-led_index'>
            <% i = 0 %>
            <%= i %>
          </td>
          <td class='node-neo_pixel_stick_eight-led_color'>
            <%= @node.getCurrentColor(i) %>
          </td>
    </tr>
    <% (1..7).each do |i| %>
      <tr>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td><%= i %></td>
        <td><%= @node.getCurrentColor(i) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Edit', edit_node_path(@node) %> |
<%= link_to 'Back', nodes_path %>